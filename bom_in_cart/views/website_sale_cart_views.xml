<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_website_sale_cart_bom" model="ir.ui.view">
        <field name="name">website.sale.cart.view.form.inherit.website.sale.cart
        </field>
        <field name="model">website.sale.cart</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_shop_checkout']"
                   position="inside">
                <div class="content-group">
                    <div class="o_setting_left_pane">
                        <field name="enable_bom_in_cart"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_bom_in_cart"/>
                        <div class="text-muted">
                            Show BOM of products in cart
                        </div>
                        <div class="content-group mt16"
                             invisible="enable_bom_in_cart == False">
                            <field name="bom_product_ids"
                                   widget="many2many_tags"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
